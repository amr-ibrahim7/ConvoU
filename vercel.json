{
    "version": 2,
    "builds": [
      {
        "src": "be/src/app.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["prisma/schema.prisma", "node_modules/.prisma/client/libquery_engine-*"]
        }
      },
      {
        "src": "fe/next.config.ts",
        "use": "@vercel/next",
        "config": {
          "distDir": ".next"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/be/src/app.ts"
      },
      {
        "source": "/(.*)",
        "destination": "/fe/$1"
      }
    ]
  }